var above_enemy = (y &lt; other.y+vspd);
var falling = (vspd &gt; 0);

if (above_enemy &amp;&amp; (falling || state = ledge_grab_state)) {
    if (!place_meeting(x, yprevious, Solid)) {
        y = yprevious;
    }
    
    while(!place_meeting(x, y+1, other)) {
        y++;
    }
    
    //Kill the enemy
    with (other) {
        instance_destroy();
        if (room!=room_last) { //Increase the number of direct kills in room
            global.number_of_direct_enemy_kills_in_room += 1;
        }
    }
    
    //Bounce off enemy
    vspd = -(jspd/1.5);
    
    //Play the sound
    audio_play_sound(snd_step, 6, false);
    
} else {
    //Take damage
    take_damage(other.damage);
}
